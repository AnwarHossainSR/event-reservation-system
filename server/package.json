{
    "name": "seat-reservation-api",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "engines": {
        "node": ">=20.0.0",
        "yarn": ">=1.22.0",
        "npm": "please-use-yarn"
    },
    "scripts": {
        "start": "node dist/src/index.js",
        "dev": "tsc-watch --onSuccess \"node ./dist/src/index.js\"",
        "build": "tsc",
        "postinstall": "npm run build && npx prisma generate && npx prisma migrate",
        "prepare": "husky install && yarn run seed",
        "eslint": "eslint --fix src",
        "prettier": "prettier --write .",
        "format": "next lint --fix && prettier '**/*.{json,yaml}' --write --ignore-path .gitignore",
        "test": "npx jest --coverage",
        "seed": "ts-node prisma/seed.ts"
    },
    "lint-staged": {
        "*.{md,ts,tsx}": "yarn prettier",
        "*.{ts,tsx}": "yarn eslint"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@commitlint/cli": "^17.7.1",
        "@commitlint/config-conventional": "^17.7.0",
        "@types/bcrypt": "^5.0.0",
        "@types/compression": "^1.7.2",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/morgan": "^1.9.5",
        "@types/multer": "^1.4.7",
        "@types/node": "^20.5.7",
        "@types/node-cron": "^3.0.11",
        "@types/nodemailer": "^6.4.16",
        "@types/supertest": "^6.0.2",
        "@types/swagger-jsdoc": "^6.0.1",
        "@types/swagger-ui-express": "^4.1.3",
        "@typescript-eslint/eslint-plugin": "^6.5.0",
        "@typescript-eslint/parser": "^6.5.0",
        "eslint": "^8.48.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "husky": "^8.0.3",
        "lint-staged": "^14.0.1",
        "prettier": "^3.0.3",
        "prisma": "^5.21.1",
        "ts-jest": "^29.2.5",
        "tsc-watch": "^6.0.4",
        "typescript": "^5.2.2"
    },
    "dependencies": {
        "@prisma/client": "^5.21.1",
        "bcrypt": "^5.1.1",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "envalid": "^8.0.0",
        "express": "^4.19.2",
        "helmet": "^7.1.0",
